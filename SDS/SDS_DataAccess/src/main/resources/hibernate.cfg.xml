<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url"> jdbc:mysql://localhost:3306/sds</property>
		<property name="hibernate.connection.username">user_sds</property>
		<property name="hibernate.connection.password">user_sds</property>
		<property name="show_sql">true</property>
	
		<mapping resource="mapeos/Accion.hbm.xml"/>
		<mapping resource="mapeos/Funcionalidad.hbm.xml"/>
		<mapping resource="mapeos/Persona.hbm.xml"/>
		<mapping resource="mapeos/Rol.hbm.xml"/>
		<mapping resource="mapeos/RolAccionFuncionalidad.hbm.xml"/>
		<mapping resource="mapeos/Usuario.hbm.xml"/>
		<mapping resource="mapeos/Empresa.hbm.xml"/>

	</session-factory>

</hibernate-configuration>