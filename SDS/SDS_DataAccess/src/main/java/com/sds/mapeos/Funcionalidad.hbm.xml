<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class table="funcionalidad" name="Pojos.Funcionalidad">
	<id name="idFuncionalidad" type="java.lang.Integer">
		<column name="idFuncionalidad"/>
		<generator class="identity"/>
	</id>

	<property name="nombreFuncionalidad" type="string">
		<column name="nombreFuncionalidad"/>
	</property>

	<property name="descripFuncionalidad" type="string">
		<column name="descripFuncionalidad"/>
	</property>

	<property name="borradoFuncionalidad" type="java.lang.Integer">
		<column name="borradoFuncionalidad"/>
	</property>

	<set table="rolaccionfuncionalidad" name="roles" fetch="select" lazy="false"
			inverse="false">
			<key>
				<column name="idFuncionalidad" not-null="true" />
			</key>
			<many-to-many entity-name="pojos.Rol">
				<column name="idRol" not-null="true" />
			</many-to-many>
		</set>

		<set table="rolaccionfuncionalidad" name="acciones" fetch="select"
			lazy="false" inverse="false">
			<key>
				<column name="idFuncionalidad" not-null="true" />
			</key>

			<many-to-many entity-name="pojos.Accion">
				<column name="idAccion" not-null="true" />
			</many-to-many>
		</set>

</class>

</hibernate-mapping>
