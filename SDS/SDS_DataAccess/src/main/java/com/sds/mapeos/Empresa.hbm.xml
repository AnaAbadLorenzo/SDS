<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class table="empresa" name="Pojos.Empresa">
	<id name="idEmpresa" type="java.lang.Integer">
		<column name="idEmpresa"/>
	</id>

	<property name="nombreEmpresa" type="string">
		<column name="nombreEmpresa"/>
	</property>

	<property name="cifEmpresa" type="string">
		<column name="cifEmpresa"/>
	</property>

	<property name="direccionEmpresa" type="string">
		<column name="direccionEmpresa"/>
	</property>


	<property name="telefonoEmpresa" type="string">
		<column name="telefonoEmpresa"/>
	</property>

	<property name="borradoEmpresa" type="string">
		<column name="borradoEmpresa"/>
	</property>

	<one-to-one name="usuario"/>

</class>

</hibernate-mapping>